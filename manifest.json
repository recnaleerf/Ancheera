{
  "manifest_version": 2,

  "name": "AnCheera",
  "description": "The GBF Companion Extension that's absolutely bananas.",
  "version": "0.9.0",

  "icons": { "16": "src/assets/images/icon16.png",
            "48": "src/assets/images/icon48.png",
            "128": "src/assets/images/icon128.png" 
            },

  "browser_action": {
    "default_icon": "src/assets/images/icon128.png",
    "default_popup": "src/pages/popup/popup.html",
    "default_title": "AnCheera"
  },   
  
  "options_ui": {
    "page": "src/pages/options/options.html",
    "chrome_style": true
  },
  
  
  "background": {
    "scripts": ["src/background.js"]
  },

  "content_scripts": [{
    "matches": ["http://gbf.game.mbga.jp/*", "http://game.granbluefantasy.jp/*"],
    "js": ["lib/jquery-3.0.0.min.js", "src/script.js"],
    "run_at": "document_end"
  }],

  "permissions": [
    "storage",
    "cookies",
    "http://gbf.game.mbga.jp/*",
    "notifications",
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "devtools_page": "src/pages/devtools/devtools.html"
}